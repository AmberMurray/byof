
<div class="container">
  <div class="row"></div>
  <div class="row"></div>
  <div class="row">
    <div class="col m6 offset-m3 center-align">
      <h3>{{ bar.name }}</h3>
      <img src="{{ bar.bar_pic }}"alt="{{ bar.name }}" class="responsive-img">
      <h5>{{ bar.address }}</h5>
      {{#if bar.beer}}
      <h5>Serves BEER! 🍺</h5>
      {{/if}}
      {{#if bar.liquor}}
      <h5>Serves LIQUOR! 🍹</h5>
      {{/if}}
    </div>
  </div>
</div>
