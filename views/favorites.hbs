<div class="container">
  <div class="row">
    {{#if !favorites}}
      <h3>Eat more and add some Favs!</h3>
    {{/if}}
    {{#each favorites}}
    <div class="col s3 center-align">
      <img src="{{ this.truck_pic }}" alt="{{ this.name }}">
      <div class="row"></div>
      <a href="/trucks/{{this.id}}"><h5>{{ this.name }}</h5></a>
      <h6>Type of Food: {{ this.food }}</h6>
      <h6 class="red-text">Safety Rating: {{ this.safety }}</h6>
      <div class="ro  w"></div>
      <div class="row"></div>
    </div>
    {{/each}}
  </div>
</div>
