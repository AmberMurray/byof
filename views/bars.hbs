<div class="row"></div>
<div class="row"></div>
<div class="container">
  <div class="row">
    {{#each bars}}
    <div class="col s3">
      <img src="{{ this.bar_pic }}" class="responsive-img" alt="{{ this.name }}">
      <a href="/bars/{{this.id}}" class="center-align"><h5>{{ this.name }}</h5></a>
      <h6 class="center-align">{{ this.address }}</h6>
      {{#if this.beer}}
      <h6 class="center-align">Serves BEER! 🍺</h6>
      {{/if}}
      {{#if this.liquor}}
      <h6 class="center-align">Serves LIQUOR! 🍹</h6>
      {{/if}}
      <div class="row"></div>
      <div class="row"></div>
    </div>
    {{/each}}
  </div>
</div>
